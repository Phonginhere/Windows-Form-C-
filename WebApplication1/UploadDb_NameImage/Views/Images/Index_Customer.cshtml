@model IEnumerable<UploadDb_NameImage.Models.Image>

@{
    ViewBag.Title = "Index_Customer";
}


<h2>Index_Customer</h2>


<div class="container-fluid">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-xs-4 col-sm-4 col-md-4">
                <div class="img-thumbnail">
                    <div style="height: 40px;width: 250px; background-color: rgb(251, 255, 241);"><p style="text-align: center;">Đây là abcd</p></div>
                    <img src="~/ImageUpload/@item.ImagePath" width="250" height="150" />
                    <div style="height: 40px;width: 250px; background-color: rgb(251, 255, 241);"><table style="border-collapse:separate; border-spacing: 10px;"><tr><th>$1000</th><th><a href="#addcart" style="margin-left: 100px;">Add to cart</a></th></tr></table></div>
                </div>
            </div>
        }

    </div> <!-- End row -->
</div><!-- End container -->



