@model IEnumerable<WindowsStoresss.Models.Genre>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<tr>
    <th>
        @using (Html.BeginForm("Index", "Movies", FormMethod.Get))
            {

            <b> Search Option: </b>
            @Html.TextBox("search")
            <input type="submit" name="submit" value="Submit" onclick="autoHide()" />
        }

        @if (Model.Count() == 0)
            {
    <tr>
        <td colspan="3"> Records not found </td>
    </tr>
        }

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GenreName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GenreName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.GenreId }) |
            @Html.ActionLink("Details", "Details", new { id=item.GenreId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.GenreId })
        </td>
    </tr>
}

</table>
