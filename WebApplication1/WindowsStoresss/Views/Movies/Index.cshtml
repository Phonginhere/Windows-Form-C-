@model IEnumerable<WindowsStoresss.Models.Movie>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<tr>
    <th>
        
        @using (Html.BeginForm("Index", "Movies", FormMethod.Get))
            {

            <b> Search Option: </b>
            @Html.DropDownList("catMovie", (IEnumerable<SelectListItem>)ViewBag.CateList)
            @Html.DropDownList("movieGenre", (IEnumerable<SelectListItem>)ViewBag.CategoryList)
            @Html.TextBox("search")
            <input type="submit" name="submit" value="Submit" onclick="autoHide()" />
        }

        @if (Model.Count() == 0)
            {
    <tr>
        <td colspan="3"> Records not found </td>
    </tr>
        }


        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReleaseDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RunningTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BoxOffice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genre.GenreName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RunningTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BoxOffice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre.GenreName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MovieId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.MovieId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.MovieId })
                    </td>
                </tr>
            }

        </table>
